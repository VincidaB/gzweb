{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir":"./tsc-out",
    "lib": ["dom", "es2015"],
    "typeRoots": ["./src/customTypes"],
    "paths": {
      "*": [ "./node_modules/*", "./src/customTypes/*" ]
    }
  },
  "include": ["./src/*"]
}
